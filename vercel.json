{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ],
  "env": {
    "VITE_API_URL": "https://apex-backend.vercel.app"
  },
  "domains": [
    "xn--apex-gerste-0hb.ch",
    "www.xn--apex-gerste-0hb.ch"
  ],
  "functions": {
    "api/**/*.js": {
      "maxDuration": 30
    }
  }
} 